{% extends 'base.j2' %}
{% block title %} Welcome Page {% endblock %}
{% block content %}
    <h2>Welcome to {{ go_home('AuthApp') }}!</h2>
    <h3>Here is what you can do in AuthApp:</h3>
    <p><a href="{{ url_for('auth.register') }}" > Register a new user </a>
    <p><a href="{{ url_for('auth.login') }}" > Log into account </a>
    <p><a href="{{ url_for('accounts.me') }}" > Manage your account </a>
    {% if user and user.is_admin %}
      <p><a href="{{ url_for('accounts.all') }}" > Manage users accounts </a>
    {% endif %}
{% endblock %}
